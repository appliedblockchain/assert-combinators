{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "isolatedModules": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "wip"
  ]
}
